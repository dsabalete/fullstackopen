{
  "name": "blog-list-backend",
  "version": "0.1.0",
  "description": "Blog app - part 4",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "build:ui": "rm -rf build && cd ../blog-list-frontend && yarn build && cp -r build ../blog-list-backend",
    "deploy": "fly deploy --ha=false",
    "deploy:full": "yarn build:ui && yarn deploy",
    "logs:prod": "fly logs",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand"
  },
  "author": "David Sabalete",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "mongoose": "^7.4.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@flydotio/dockerfile": "^0.3.3",
    "eslint": "^8.45.0",
    "jest": "^29.6.4",
    "nodemon": "^2.0.7"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
